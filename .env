# Application Configuration
NEXT_PUBLIC_APP_NAME=Olu Marketplace
NEXT_PUBLIC_APP_URL=http://akaolu.test

# API Configuration
NEXT_PUBLIC_API_BASE_URL=http://akaolu.test/api

# Authentication Configuration
NEXT_PUBLIC_AUTH_LOGIN_ENDPOINT=/auth/login
NEXT_PUBLIC_AUTH_REGISTER_ENDPOINT=/auth/register

# Environment
NODE_ENV=development

# Security
NEXT_PUBLIC_API_KEY=your_api_key_here

# Database (if applicable)
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=olu_marketplace
DB_USERNAME=root
DB_PASSWORD=your_password

# Port Configuration
PORT=3000

# Email Configuration
NEXT_PUBLIC_EMAIL_SUPPORT=support@akaolu.test
NEXT_PUBLIC_EMAIL_NO_REPLY=no-reply@akaolu.test

# Other Configurations
NEXT_PUBLIC_ANALYTICS_ID=your_google_analytics_id_here
NEXT_PUBLIC_FEATURE_FLAGS=enable_feature1,enable_feature2